{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "./dist",
    "types": ["vite/client"], // 추가
    "baseUrl": "src",
    "paths": {
      "@context": ["lib/react-floating-profile/context/index.ts"],
      "@api": ["lib/react-floating-profile/api/index.ts"],
      "@types": ["lib/react-floating-profile/types/index.ts"],
      "@util": ["lib/react-floating-profile/util/index.ts"],
      "@components": ["lib/react-floating-profile/components/index.ts"]
    }
  },
  "include": ["./src/lib/**/*.tsx", "./src/lib/**/*.ts"],
  "exclude": ["node_modules", "src/App.tsx", "src/main.tsx"]
}
